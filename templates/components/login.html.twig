<div class="content">
    <div class="card-header boxX">
      <h2>Connexion<h2>
    </div>
    
    <form action="{{ path('app_login') }}" method="post">
      <div class="card-body boxXXX my-form-label">
      <div class="col-12 bg-light ">
         <div class="form-group">
            <label for="username">Nom d'utilisateur :</label>
            <input type="text" class="form-control" id="username" name="_username" placeholder="Entrez votre nom d'utilisateur">
         </div>
        </div>
        <div class="col-12 bg-light ">
          <div class="form-group">
            <label for="password">Mot de passe :</label>
            <input type="password" class="form-control" id="password" name="_password" placeholder="Entrez votre mot de passe">
           </div>
         </div>
        <button type="submit" class="btn btn-primary">Se connecter</button>
      </div>
    </form>
</div>
